<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aariyan.briefcase">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Briefcase"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.SalesActivity"
            android:exported="false" />
        <activity
            android:name=".LandingActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ViewMemoVisit"
            android:exported="false" />
        <activity
            android:name=".Activity.CreateMemo"
            android:exported="false" />
        <activity
            android:name=".Activity.LogVisit"
            android:exported="false" />
        <activity
            android:name=".Activity.MemoHome"
            android:exported="false" />
        <activity
            android:name=".Activity.MessageActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CollaborationActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CustomerNameActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.StockSheetActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CustomerName"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sales"
            android:exported="false" />
        <activity
            android:name=".OrderActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>